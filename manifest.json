{
    "manifest_version": 2,
    "name": "focus-x",
    "version": "0.1",
    "permissions": [
        "activeTab",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "devtools_page": "devtools.html",
    "content_scripts": [
        { 
            "matches": [
                "<all_urls>"
            ],
            "js": ["focusListeningContentScript.js"] 
        }
    ]
}